# ===========================================
# AI Recruitment Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# Database (Railway provides this automatically when you add PostgreSQL)
# -----------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/recruitment_db

# For local Docker development:
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DB=recruitment_db

# -----------------
# JWT Authentication
# -----------------
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------
# NVIDIA API (for AI interview features)
# -----------------
NVIDIA_API_KEY=your-nvidia-api-key

# -----------------
# Email Settings for 2FA (Optional)
# -----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=RecruitAI

# -----------------
# 2FA Settings
# -----------------
OTP_EXPIRE_MINUTES=10
TWO_FACTOR_ENABLED=true

# -----------------
# Application Settings
# -----------------
DEBUG=False

# -----------------
# Railway-specific (auto-populated by Railway)
# -----------------
# PORT - Railway sets this automatically
# RAILWAY_ENVIRONMENT - Railway sets this automatically
